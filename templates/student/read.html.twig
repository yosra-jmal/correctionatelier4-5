<h1>
  student index
</h1>
{{ dump(students) }}
<form action="{{ path('app_student_moyenneMinMax') }}" method="get">
  <label for="fname">Min:</label>
  <input type="text" id="min" name="min"><br><br>
  <label for="fname">Max:</label>
  <input type="text" id="max" name="max"><br><br>
  <input type="submit" value="Submit">
</form>
<table border="2">
  <thead>
    <tr>
      <th>
        nsc
      </th>
      <th>
        Email
      </th>
      <th>
        classroom id
      </th>
      <th>
        classroom name
      </th>
      <th>
        Moyenne
      </th>
      <th>
        actions
      </th>
    </tr>
  </thead>
  <tbody>
    {% for student in students %}
      <tr>
        <td>
          {{ student.nsc }}
        </td>
        <td>
          {{ student.email }}
        </td>
         <td>
          {{ student.classroom.id }}
        </td>
         <td>
          {{ student.classroom.name }}
        </td>
         <td>
          {{ student.moyenne }}
        </td>
        <td>
           <a href="{{
              path(
                'app_student_edit',
                {
                  id: student.nsc
                }
              )
              }}">
              edit
            </a>
          <a href="{{
            path(
              'app_student_delete',
              {
                id: student.nsc
              }
            )
            }}">
            delete
          </a> 
        </td>
      </tr>
    {% else %}
      <tr>
        <td colspan="3">
          no records found
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>

<a href="{{ path('app_student_create') }}">Create new</a>

<a href="{{ path('app_student_liste_ordonne') }}">Trier par Email</a>
